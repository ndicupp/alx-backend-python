Manage Jenkins → Credentials → System → Global → Add Credentials

messaging-app-pipeline


pipeline {
    agent any

    environment {
        // Reference the ID you created in Step 3
        GIT_CREDS = credentials('github-auth')
    }

    stages {
        stage('Checkout') {
            steps {
                // Pulls code from your repository
                git url: 'https://github.com/YOUR_USERNAME/YOUR_REPO.git', 
                    credentialsId: 'github-auth', 
                    branch: 'main'
            }
        }

        stage('Setup Environment') {
            steps {
                // Using ShiningPanda to create a Python environment
                sh 'python3 -m venv venv'
                sh './venv/bin/pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                // Run pytest and generate a JUnit XML report for Jenkins to read
                sh './venv/bin/pytest --junitxml=reports/result.xml'
            }
        }
    }

    post {
        always {
            // This captures the test results and displays them in the Jenkins UI
            junit 'reports/result.xml'
        }
    }
}


https://github.com/YOUR_USERNAME/YOUR_REPO.git

  main

